{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "types": ["node"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    "scripts",
    ".vscode",
    ".idea",
    "test"
  ],
  "include": ["**/*.ts"]
}
